  <!-- Physical Fatigue Levels -->
  <Affliction
    name=""
    identifier="medical_fatigue_light"
    description=""
    limbspecific="false"
    indicatorlimb="Head"
    showiconthreshold="1"
    showinhealthscannerthreshold="1"
    maxstrength="100"
    targets="human"
    type="medical_fatigue"
    isbuff="false"
    healableinmedicalclinic="false"
    iconcolors="255,200,100,255;255,200,100,255">
    
