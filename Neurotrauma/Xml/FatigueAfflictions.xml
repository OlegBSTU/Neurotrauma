    isbuff="true"
    healableinmedicalclinic="false"
    iconcolors="100,255,100,255;100,255,100,255">
    
    <Effect minstrength="1" maxstrength="100" strengthchange="-1">
      <StatusEffect target="Character" multiplyafflictionsbymaxvitality="false">
        <conditional ishuman="true"/>
        <!-- Rest reduces all fatigue and stress -->
        <ReduceAffliction identifier="medical_fatigue_light" amount="2"/>
        <ReduceAffliction identifier="medical_fatigue_moderate" amount="1.5"/>
        <ReduceAffliction identifier="medical_fatigue_severe" amount="1"/>
