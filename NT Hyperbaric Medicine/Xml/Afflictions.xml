    basehealcost="500"
    iconcolors="60,140,195,255;60,107,195,255;60,0,195,255">
     <Description
      textidentifier="afflictiondescription.huskinfection.dormant.self"
      target="Self"
      minstrength="0"
      maxstrength="50"/>
